#!/bin/bash

#############################################################
#   This script is used by McM when it performs automatic   #
#  validation in HTCondor or submits requests to computing  #
#                                                           #
#      !!! THIS FILE IS NOT MEANT TO BE RUN BY YOU !!!      #
# If you want to run validation script yourself you need to #
#     get a "Get test" script which can be retrieved by     #
#  clicking a button next to one you just clicked. It will  #
# say "Get test command" when you hover your mouse over it  #
#      If you try to run this, you will have a bad time     #
#############################################################

cd /afs/cern.ch/cms/PPD/PdmV/work/McM/submit/TSG-Phase2HLTTDRSummer20ReRECOMiniAOD-00005/

# Make voms proxy
voms-proxy-init --voms cms --out $(pwd)/voms_proxy.txt --hours 4
export X509_USER_PROXY=$(pwd)/voms_proxy.txt

export SCRAM_ARCH=slc7_amd64_gcc820

source /cvmfs/cms.cern.ch/cmsset_default.sh
if [ -r CMSSW_11_1_2_patch3/src ] ; then
  echo release CMSSW_11_1_2_patch3 already exists
else
  scram p CMSSW CMSSW_11_1_2_patch3
fi
cd CMSSW_11_1_2_patch3/src
eval `scram runtime -sh`

scram b
cd ../..

# Maximum validation duration: 28800s
# Margin for validation duration: 30%
# Validation duration with margin: 28800 * (1 - 0.30) = 20160s
# Time per event for each sequence: 5.2923s
# Threads for each sequence: 8
# Time per event for single thread for each sequence: 8 * 5.2923s = 42.3384s
# Which adds up to 42.3384s per event
# Single core events that fit in validation duration: 20160s / 42.3384s = 476
# Produced events limit in McM is 10000
# According to 1.0000 efficiency, validation should run 10000 / 1.0000 = 10000 events to reach the limit of 10000
# Take the minimum of 476 and 10000, but more than 0 -> 476
# It is estimated that this validation will produce: 476 * 1.0000 = 476 events
EVENTS=476


# cmsDriver command
cmsDriver.py  --python_filename TSG-Phase2HLTTDRSummer20ReRECOMiniAOD-00005_1_cfg.py --eventcontent RECOSIM --customise SLHCUpgradeSimulations/Configuration/aging.customise_aging_1000,L1Trigger/Configuration/customisePhase2TTOn110.customisePhase2TTOn110,Configuration/DataProcessing/Utils.addMonitoring --datatier FEVT --inputCommands "keep *" --fileout file:TSG-Phase2HLTTDRSummer20ReRECOMiniAOD-00005.root --conditions 111X_mcRun4_realistic_T15_v1 --customise_commands "process.RECOSIMoutput.outputCommands.append('keep *_*_*_HLT'); process.RECOSIMoutput.outputCommands.append('keep *_*_*_SIM'); process.RECOSIMoutput.outputCommands.extend(process.L1TriggerFEVTDEBUG.outputCommands); process.RECOSIMoutput.outputCommands.extend(process.MicroEventContentMC.outputCommands); process.load('HLTrigger.Configuration.HLTPhase2TDR_EventContent_cff'); process.RECOSIMoutput.outputCommands.extend(process.HLTPhase2TDR.outputCommands)" --step L1TrackTrigger,L1,RAW2DIGI,RECO,RECOSIM,PAT --geometry Extended2026D49 --nStreams 0 --filein "dbs:/DoubleMuon_gun_FlatPt-1To100/Phase2HLTTDRWinter20DIGI-NoPU_110X_mcRun4_realistic_v3-v2/GEN-SIM-DIGI-RAW" --era Phase2C9 --runUnscheduled --no_exec --mc -n $EVENTS || exit $? ;
